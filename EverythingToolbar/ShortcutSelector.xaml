<Page x:Class="EverythingToolbar.ShortcutSelector"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:properties="clr-namespace:EverythingToolbar.Properties"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:behaviors="clr-namespace:EverythingToolbar.Behaviors"
      Unloaded="OnClosed"> <!--What's the event for navigating away from a page?-->
    
    <b:Interaction.Behaviors>
        <behaviors:WpfUiBehavior />
    </b:Interaction.Behaviors>
    
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <ui:TextBox Name="ShortcutTextBox"
                 GotKeyboardFocus="OnGotKeyboardFocus"
                 LostKeyboardFocus="OnLostKeyboardFocus" />
        <ui:Button Margin="10, 0, 0, 0"
                Content="{x:Static properties:Resources.ShortcutOK}"
                Grid.Column="1"
                Click="OnOkClicked" />
    </Grid>
    
</Page>
